<%= semantic_nested_form_for resource, :url => resource_url do | form | %>
  <%= form.semantic_errors %>
  <%= render :partial => "fields", :locals => { :form => form } %>
  <%= form.actions do %>
    <%= form.action :submit, :label => 'Сохранить', :button_html => { :class => 'button' } %>
    <%= form.action :cancel, :label => 'Отмена' %>
  <% end %>
<% end %>
