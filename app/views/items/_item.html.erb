<%= content_tag :p, link_to(item.person || item.itemable, category_path(item.itemable)), :class => "title" %>
<% if Settings['app.academical_attributes'] %>
  <%= content_tag :p, item.person.academic_degree %>
  <%= content_tag :p, item.person.academic_rank %>
<% end %>
<%= content_tag :p, "#{item}" %>
<%= content_tag :p, :class => "address" do %>
  Адрес: <%= item.address.full_address %>
<% end %>
<%= content_tag :p, Phone.present_as_str(item.phones), :class => "phones" if item.phones.any? %>
<%= content_tag :p, item.emails.map{|email| mail_to(email)}.join(', ').html_safe if item.emails.any? %>
<%= content_tag :p, "#{I18n.t('activerecord.attributes.person.reception')} #{item.person.reception}" if item.person.present? && item.person.reception.present? %>
<%= content_tag :p, "#{I18n.t('activerecord.attributes.person.appointments')} #{item.person.appointments}" if item.person.present? && item.person.appointments.present? %>
