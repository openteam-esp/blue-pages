<%= content_tag :p, link_to(item.person, subdivision_path(item.subdivision)), :class => "title" %>
<%= content_tag :p, "#{item}, #{item.subdivision}" %>
<%= content_tag :p, :class => "address" do %>
  Адрес: <%= item.building %><%= ", #{item.office} кабинет" unless item.office.blank? %>
<% end %>
<%= content_tag :p, item.phones.join(", "), :class => "phones" if item.phones.any? %>
