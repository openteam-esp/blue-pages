<h1>Aloha!</h1>

<%= semantic_search_form_for :subdivision, :url => subdivisions_path do |form| %>
  <%= form.inputs do %>
    <%= form.input :keywords, :as => :string %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button t('search') %>
  <% end %>
<% end %>
<%= content_tag :div, :class => "subdivisions" do %>
  <% @subdivisions.each do | subdivision | %>
    <div class="item">
      <%= link_to subdivision.title, "#" %>
    </div>
  <% end %>
<% end if @subdivisions.any? %>
