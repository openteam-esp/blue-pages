<div class="subdivision">
  <%= show_for subdivision do | s | %>
    <%= s.association :address, :if_blank => "Не указан" %>
    <%= s.association :phones, :if_blank => "Не указаны" %>
    <%= s.association :emails, :if_blank => "Не указаны" do | email | %>
      <li><%= mail_to email %></li>
    <% end %>
    <%= s.attribute :url do %>
      <%= subdivision.url.blank? ? "Не указан" : link_to(subdivision.url, subdivision.url, :target => "_blank") %>
    <% end %>
  <% end %>

  <div class="items">
    <h3>Сотрудники</h3>
    <%= render :partial => "items", :locals => { :items => items } %>
  </div>

  <div class="subdivisions">
    <h3>Подразделения</h3>
    <% if can?(:manage, subdivision) %>
      <div class="actions">
        <%= link_to t('active_admin.sort'), sort_admin_parent_subdivision_subdivisions_path(subdivision), :class => 'sort_link off button icon loop' %>
        <%= link_to t('active_admin.new_subdivision'),
          new_admin_parent_subdivision_subdivision_path(subdivision),
          :class => 'button icon add' %>
      </div>
    <% end %>
    <%= render :partial => "subdivisions", :locals => { :subdivisions => subdivisions } %>
  </div>
</div>
