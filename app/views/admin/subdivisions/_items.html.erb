<% if can?(:maange, @subdivision) %>
  <div class="actions">
    <%= link_to t('active_admin.sort'), sort_admin_subdivision_items_path(@subdivision), :class => 'sort_link off button icon loop' %>
    <%= link_to t('active_admin.new_item'), new_admin_subdivision_item_path(@subdivision), :class => 'button icon add' %>
  </div>
<% end %>

<% if items.empty? %>
  <h5>Нет сотрудников</h5>
<% else%>
  <ul class="sortable">
    <% items.each do |item|%>
      <li data-id='<%= item.id %>' class='item'>
        <%= render item %>
      </li>
    <% end%>
  </ul>
<% end%>
