<%= semantic_form_for [:admin, @subdivision] do |form| %>
  <%= form.inputs do %>
    <%= form.input :title %>
    <%= form.input :abbr %>
    <%= form.input :parent_id, :input_html => { :value => params[:parent_id] }, :as => :hidden if params[:parent_id] %>
  <% end %>
  <%= form.buttons %>
<% end %>
