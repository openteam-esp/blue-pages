<%= semantic_nested_form_for resource, :url => resource_path do | form | %>
  <%= form.semantic_errors %>

  <%= form.inputs do %>
    <%= form.input :title, :as => :string %>
    <%= form.input :parent_id, :as => :select, :collection => Category.all.map { |c| ["-"*c.depth + " " + c.title, c.id] } if @category.id %>
  <% end %>

  <%= form.buttons do %>
    <%= form.commit_button :button_html => { :class => 'button' } %>
    <li class="cancel"><%= link_to t("cancel"), smart_collection_url %></li>
  <% end %>
<% end %>


