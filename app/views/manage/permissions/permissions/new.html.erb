<%= semantic_form_for resource, :url => collection_path do |form| %>
  <%= form.inputs do  %>
    <%= form.input :context, :collection => current_user.manageable_categories, :member_label => :hierarchical_title, :polymorphic => true %>
    <%= form.input :role, :as => :select, :collection => Permission.human_enums[:role].invert %>
  <% end %>
  <%= form.buttons %>
<% end %>

